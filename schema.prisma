// Prisma schema for WedWyze
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Wedding {
  id          String   @id @default(cuid())
  slug        String   @unique
  coupleName  String
  date        DateTime
  location    String
  description String?
  events      Event[]
  guests      Guest[]
  budgetItems BudgetItem[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Event {
  id        String   @id @default(cuid())
  name      String
  startTime DateTime
  endTime   DateTime?
  location  String?
  wedding   Wedding  @relation(fields: [weddingId], references: [id])
  weddingId String
  createdAt DateTime @default(now())
}

model Guest {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  rsvp      RsvpStatus @default(PENDING)
  wedding   Wedding  @relation(fields: [weddingId], references: [id])
  weddingId String
  createdAt DateTime @default(now())
}

enum RsvpStatus {
  PENDING
  ACCEPTED
  DECLINED
}

model BudgetItem {
  id          String   @id @default(cuid())
  name        String
  amount      Int
  wedding     Wedding  @relation(fields: [weddingId], references: [id])
  weddingId   String
  createdAt   DateTime @default(now())
}